<mvc:View xmlns="sap.m" controllerName="djp.clouddna.demo.controller.Additional" xmlns:f="sap.ui.layout.form" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core">

    <Page id="page2" title="{i18n>title}" showNavButton="true" navButtonPress="onNavBack">

        <customHeader>
            <Bar>
                <contentLeft>
                    <Button icon="sap-icon://nav-back" press="onNavBack"/>
                </contentLeft>
                <contentMiddle>
                    <Title text="Customer Details"/>
                    <SegmentedButton>
                        <items>
                            <SegmentedButtonItem text="Info"/>
                            <SegmentedButtonItem text="Items"/>
                            <SegmentedButtonItem text="History"/>
                        </items>
                    </SegmentedButton>
                </contentMiddle>
                <contentRight>
                    <SearchField width="100%" placeholder="Search Products"/>
                    <Button text="Create" press="onCreate"/>
                    <Button icon="sap-icon://action" press="onMore"/>
                </contentRight>
            </Bar>
        </customHeader>

        <content>

            <VBox >
                <Title class="sapUiSmallMarginBegin" text="This is a title" titleStyle="H1"/>
            </VBox>
                <Text class="sapUiSmallMarginBegin" text="Hello World" maxLines="1" wrapping="true"/>
            <VBox >
                <Input class="sapUiSmallMarginBegin" placeholder="Provide something" description="Unit" width="300px"/>
            </VBox>
            <VBox >
                <Input class="sapUiSmallMarginBegin sapUiSmallMarginBegin" showSuggestion="true" showClearIcon="true" width="300px">
                    <suggestionItems>
                        <core:Item key="1" text="first"/>
                        <core:Item key="2" text="second"/>
                        <core:Item key="3" text="third"/>
                    </suggestionItems>
                </Input>
            </VBox>
            <VBox >
                <StepInput class="sapUiSmallMarginBegin" value="10" step="10" max="100" min="0" width="300px" />
            </VBox>
            <VBox >
                <MaskInput class="sapUiSmallMarginBegin" mask="+81 9999 9999999999" width="350px"/>
            </VBox>
            <VBox >
                <TextArea class="sapUiSmallMarginBegin" value="I'm a really long text" rows="6"/>
            </VBox>
            <VBox >
                <DatePicker class="sapUiSmallMarginBegin" id="datePicker" width="350px" />
            </VBox>

            <VBox >
                <CheckBox class="sapUiSmallMarginBegin" text="Do you like this book" selected="true" />
            </VBox>

            <VBox >
            </VBox>

            <VBox >
            </VBox>

            <VBox >
            </VBox>
        </content>

        <footer>
            <OverflowToolbar id="footerToolbar2">

            </OverflowToolbar>
        </footer>

    </Page>

</mvc:View>